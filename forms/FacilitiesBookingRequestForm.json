                    "properties": {
                        "requiredSanitize": "",
                        "autoPopulate": "",
                        "label": "",
                        "id": "field6",
                        "value": "<script>\r\n$(document).ready(function () {\r\n    const durations = {\r\n        \"BBQ Pit\": 4,\r\n        \"Multipurpose Hall\": 6,\r\n        \"Meeting Room\": 3,\r\n        \"Sauna\": 1,\r\n        \"Pickleball Court\": 2\r\n    };\r\n\r\n    function getHourFromDate(dateStr) {\r\n        const time = new Date(dateStr);\r\n        return time.getHours();\r\n    }\r\n\r\n    function padZero(n) {\r\n        return n < 10 ? \"0\" + n : n;\r\n    }\r\n\r\n    function updateEndTime(startDateTime, duration) {\r\n        let date = new Date(startDateTime);\r\n        date.setHours(date.getHours() + duration);\r\n        const h = padZero(date.getHours());\r\n        const m = padZero(date.getMinutes());\r\n        return h + \":\" + m;\r\n    }\r\n\r\n    // Force picker between 10am and 10pm & hour only\r\n    $(\"#booking_date\").datepicker({\r\n        dateFormat: \"yy-mm-dd\",\r\n        timeFormat: \"HH:00\", // only hours\r\n        hourMin: 10,\r\n        hourMax: 21, // Max start at 9pm if 1 hour allowed\r\n        stepMinute: 60\r\n    });\r\n\r\n    // When facility or time is selected\r\n    $(\"#facility, #booking_date\").on(\"change\", function () {\r\n        const facility = $(\"#facility\").val();\r\n        const selectedDateTime = $(\"#booking_date\").val();\r\n\r\n        if (facility && selectedDateTime && durations[facility]) {\r\n            const startHour = getHourFromDate(selectedDateTime);\r\n\r\n            if (startHour < 10 || startHour >= 22) {\r\n                alert(\"Booking must be between 10:00 AM and 10:00 PM.\");\r\n                $(\"#booking_date\").val('');\r\n                return;\r\n            }\r\n\r\n            const endTime = updateEndTime(selectedDateTime, durations[facility]);\r\n\r\n            // Show it or store in a field\r\n            $(\"#end_time\").val(endTime); // If you have an End Time field\r\n            $(\"#auto_end_display\").html(\"End Time: \" + endTime); // Optional display\r\n        }\r\n    });\r\n});\r\n<\/script>\r\n\r\n<!-- Optional div to show auto-calculated end time -->\r\n<div id=\"auto_end_display\" style=\"margin-top:10px; font-weight:bold;\"><\/div>\r\n"
                    }
